{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./lib",
        "noImplicitAny": true,
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/test/*", "lib", "docs", "build", "dist-docs"]
  }