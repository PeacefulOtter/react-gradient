{
  "name": "react-gradient-hook",
  "version": "1.1.6",
  "description": "React hook to create gradients",
  "main": "lib/index.js",
  "module":"esm/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",

    "clean": "rm -rf ./lib",    
    "prebuild": "npm run clean",
    "build-cjs":"tsc --project ./tsconfig.cjs.json",
    "build-esm":"tsc --project ./tsconfig.esm.json",
    "build-types":"tsc --project ./tsconfig.types.json",
    "build":"npm run build-cjs && npm run build-esm && npm run build-types && echo 'Successfully built'",
    "copy-files": "copyfiles -u 1 -E -V  \"src/**/*.*css\" lib/",
    "postbuild": "npm run copy-files",

    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",

    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\""
  },
  "browserslist":[
    ">1%",
    "last 1 version",
    "Firefox ESR",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeacefulOtter/react-gradient-hook.git"
  },
  "keywords": [
    "gradient",
    "react",
    "palette",
    "colors",
    "color",
    "coolors",
    "custom",
    "user"
  ],
  "files": [
    "lib/**/*"
  ],
  "author": {
    "name": "PeacefulOtter",
    "email": "nathan.maire@epfl.ch",
    "url": "https://natmai.netlify.app"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^18.1.0",
    "react-color": "^2.19.3",
    "react-scripts": "^5.0.1",
    "ts-loader": "^9.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^28.1.1",
    "@types/react-color": "^3.0.6",
    "babel-loader": "^8.2.5",
    "copy-files": "^0.1.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.2"
  }
}
