{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "declaration": true,
      "lib": ["es6", "dom", "es2016", "es2017"],
      "outDir": "./lib",
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "emitDeclarationOnly": true,
      "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*", "lib"]
  }